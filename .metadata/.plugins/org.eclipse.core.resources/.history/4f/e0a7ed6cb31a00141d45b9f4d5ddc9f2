package entities;

import Levels.Room;

public class NPC extends GameMover{
	public int npc_id;
	public boolean fade_away = false;
	
	public NPC(float x, float y, int npc_id){
		super(x, y, 2, 2, 14, 14, "npc_sheet");
		type = "NPC";
		solid = true;
		this.npc_id = npc_id;
		
		animation.abs_ani_y = 2*npc_id*animation.frame_height;
	}
	
	@Override
	public void Update(Room room){
		if (fade_away){
			opacity-=0.005f;
			if (opacity < 0.0f){
				room.StopSpeaking();
				visible = false;
				delete_me = true;
			}
		}
		super.Update(room);
	}
	
	public void Speak(Room room){
		room.Speak(GetSpeech(), npc_id);
	}
	
	public String GetSpeech(){
		switch (npc_id){
			case 1:
				return "What do you want?!";
			default:
				return "undefined";
		}
	}
}
